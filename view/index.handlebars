
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">BurgerTime at Eat-a-Burger</h1>
    <p class="lead">Eat off the Menu, Create your own, then DEVOUR IT!!</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Fresh Burgers to be Devoured!</h2>
      <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
      </ul>
    </div>
    <div class="col">
     <h2>Devoured Burgers!</h2>
      <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Available
  </div>
  <button type="submit">Add a Burger</button>
</form>