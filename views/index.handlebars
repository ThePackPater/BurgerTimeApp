    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRanDM2e-E9MRAenaVm2CXdvtu_cuBoAxV4ZRVf-oCQDzViS_xL"
    class="img-fluid" alt="Responsive image">
  <br>
  <br>
  <h1>Use the Force & DEVOUR 'em!!</h1>
  <br>
</div>

<div id="burgers" class="container text-center">
  <div class="row">
    <div class="col">
      <br>
      <h2>Fresh Burgers!</h2>
      <br>
      {{#each burgers}}
      {{#unless this.devoured}}
      <div class="card text-white bg-dark mb-3">
        <div class="card-header">
          <h5 class="card-title">{{id}}. {{burger_name}}</h5>
        </div>
        <button id="devour-button" class="btn btn-danger btn-lg mx-auto mt-4" data-id="{{id}}" type="submit">
          Force Devour!
        </button>
        <br>
        {{/unless}}
        {{/each}}
      </div>
    </div>
   
    <div class="col">
      <br>
      <h2>Devoured Burgers!</h2>
      <br>
      {{#each burgers}}
      {{#if this.devoured}}
      <div class="card text-white bg-dark mb-3">
        <div class="card-header">
          <h5 class="card-title">{{id}}. {{burger_name}}</h5>
        </div>
        <button id="restore-button" class="btn btn-danger btn-lg mx-auto mt-4" data-id="{{id}}" type="submit">
          Force Restore!
        </button>
        <br>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>


